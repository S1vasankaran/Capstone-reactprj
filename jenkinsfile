pipeline {
    agent any

    stages {
        stage('Build & Push to Dev') {
            when {
                branch "dev"
            }
            steps {
                script {
                    echo 'Building and pushing to dev Docker repository...'
                    sh 'docker build -t sivasankaran64/reactappdev/devapp:latest .'
                    sh 'docker push sivasankaran64/reactappdev/devapp:latest'
                }
            }
        }

        stage('Build & Push to Prod') {
            when {
                branch "master"
            }
            steps {
                script {
                    echo 'Building and pushing to prod Docker repository...'
                    sh 'docker build -t sivasankaran64/reactappprod/prodapp:latest .'
                    sh 'docker push sivasankaran64/reactappprod/prodapp:latest'
                }
            }
        }
    }
}
